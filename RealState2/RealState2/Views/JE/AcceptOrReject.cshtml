@model RealState2.Models.Project
@{ 
    Layout = "~/Views/Shared/layout_je.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="col-md-10">
            @Html.HiddenFor(model => model.CustomerName)
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.PMName)
        </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.TLName)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.JEName)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Name)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Description)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Price)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Date)
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Comment)

                <div class="checkbox">
                    @Html.HiddenFor(model => model.Approval)
                </div>
                <div class="checkbox">
                    @Html.HiddenFor(model => model.PMAccept)
                </div>
                <div class="checkbox">
                    @Html.HiddenFor(model => model.TLAccept)
                </div>

                <div class="checkbox">
                    @Html.HiddenFor(model => model.Assign)
                </div>
                
                Accept
                <div class="checkbox">
                    @Html.EditorFor(model => model.JEAccept)
                    @Html.ValidationMessageFor(model => model.JEAccept, "", new { @class = "text-danger" })
                </div>
                <div class="checkbox">
                    @Html.HiddenFor(model => model.Delivered)
                </div>
                <div class="col-md-10">


                    @Html.HiddenFor(model => model.Feedback)
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
}

<div>
    @Html.ActionLink("Profile", "Index")
</div>
